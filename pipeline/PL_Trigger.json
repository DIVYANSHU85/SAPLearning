					},
					"isSequential": true,
					"activities": [
						{
							"name": "IF_LoadType",
							"type": "IfCondition",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"expression": {
									"value": "@equals(item().LoadType,'Full')",
									"type": "Expression"
								},
								"ifFalseActivities": [
									{
										"name": "EX_PL_SAP_DeltaLoad",
										"type": "ExecutePipeline",
										"dependsOn": [],
										"userProperties": [],
										"typeProperties": {
											"pipeline": {
												"referenceName": "PL_SAP_DeltaLoad",
												"type": "PipelineReference"
											},
											"waitOnCompletion": true
										}
									}
								],
								"ifTrueActivities": [
									{
										"name": "EX_PL_SAP_FullLoad",
										"type": "ExecutePipeline",
										"dependsOn": [],
										"userProperties": [],
										"typeProperties": {
											"pipeline": {
												"referenceName": "PL_SAP_FullLoad",
												"type": "PipelineReference"
											},
											"waitOnCompletion": true
										}
									}
								]
							}
						}
					]
				}
			}
		],
		"annotations": []
	}
